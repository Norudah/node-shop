    <h1>AJOUTER UN ARTICLE</h1>

    <form class="productForm" action="/products/new" method="POST">
        <label for="newProduct">Nouveau produit :</label>
        <input type="text" name="productName" placeholder="productName">
        <input type="number" name="productPrice" placeholder="productPrice" step="0.01">
        <input type="text" name="productUrl" placeholder="productUrl">
        <textarea name="productDescription" placeholder="productDescription" id="" cols="30" rows="10"></textarea>
        <button type="submit">AJOUTER</button>
    </form>

