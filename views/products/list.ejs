<%- include("../partials/head.ejs") %> 

<nav class="topBarMenu">  
    <a class="topBarMenu__link" href="/products">Produits</a>
    <a class="topBarMenu__link" href="/products/new">Ajouter</a>
    <a class="topBarMenu__link" href="/products/clear">Supprimer</a>
    <a class="topBarMenu__link" href="/">Retour</a>
</nav>

<main>

    <h1>PRODUITS</h1>

    <% if (products.length > 0) { %> 
        <div class="productsList">
            <% for(let i = 0; i < products.length; i++) { %> 
                    <div class="card">
                        <img class="card__img" src="<%= products[i].url %>" alt="image d'un livre">
                        <h2 class="card__title"><%= products[i].title %></h2>
                        <h3 class="card__price"><%= products[i].price %></h3>
                        <p>Description</p>
                        <p class="card_Description"><%= products[i].description %></p>
                        <div>
                            <a href="/products/edit/<%= i %>">EDIT</a>
                            <a href="/products/detail/<%= i %>">DETAIL</a>
                            <form action="/products/delete/<%= i %>" method="POST">
                                <button type="submit">DELETE</button>
                            </form>
                        </div>
                    </div>
            <% } %> 
        </div>
    <% } else { %>
        <h3>Aucun produits enregistr√©s</h2>
    <% } %>  

</main>
<%- include("../partials/footer.ejs") %> 
